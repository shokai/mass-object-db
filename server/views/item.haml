!!! XML
%html
  %head
    %title= "#{@title} - #{@item.name} #{@item.mass}(g)"
    %link{:rel => 'stylesheet', :href => "#{app_root}/reset-3.1.1.css", :type => 'text/css'}
    %link{:rel => 'stylesheet', :href => "#{app_root}/fonts-3.1.1.css", :type => 'text/css'}
    %link{:rel => 'stylesheet', :href => "#{app_root}/g.css", :type => 'text/css'}      
    :javascript
      var app_root = "#{app_root}";
      var gyazz_url = "#{@@conf['gyazz_url']}";
      var item = #{@item.to_hash.to_json}
    %script{:type => 'text/javascript', :src => "#{app_root}/jquery.js"}
    %script{:type => 'text/javascript', :src => "#{app_root}/item.js"}
  %body
    %div#content
      %div#head
        %h1 #{@title}
      %div#item
        %div#name
          %span name :
          %span.entity
          %span.edit
        %div#mass
          %span mass :
          %span.entity
          %span.edit
        %div#url
          %span URL :
          %span.entity
        %div#img
          %span.img
          %span.entity
          %span.edit
      %div#control
        %input{:type => 'button', :id => 'delete', :value => '削除'}
        
        
