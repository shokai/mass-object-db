!!! XML
%html
  %head
    %title= "#{@title} #{@g}(g)"
    %link{:rel => 'stylesheet', :href => "#{app_root}/css/reset-3.1.1.css", :type => 'text/css'}
    %link{:rel => 'stylesheet', :href => "#{app_root}/css/fonts-3.1.1.css", :type => 'text/css'}
    %link{:rel => 'stylesheet', :href => "#{app_root}/css/main.css", :type => 'text/css'}
    :javascript
      var app_root = "#{app_root}";
      var g = #{@g};
      var gyazz_url = "#{@@conf['gyazz_url']}";
    %script{:type => 'text/javascript', :src => "#{app_root}/js/jquery.js"}
    %script{:type => 'text/javascript', :src => "#{app_root}/js/g.js"}      
  %body
    %div#content
      %div#head
        %h1
          %a{:href => app_root}
            #{@title}
          \/#{@g}(g)
      %div#items
        %h2 around #{@g}(g)
        %ul#items
      %div#new_item
        %h2 +add
        %input{:id => 'name', :size => '30', :value => '(name)'}
        %input{:id => 'btn_add', :type => 'button', :value => 'add'}
        
